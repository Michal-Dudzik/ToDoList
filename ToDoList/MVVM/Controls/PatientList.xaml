<UserControl x:Class="ToDoList.PatientList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:toDoList="clr-namespace:ToDoList"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="300">
    
    <StackPanel Orientation="Horizontal">
        <CheckBox IsChecked="{Binding IsSelected}" Height="100" Width="300"/>
        <StackPanel>
            <TextBlock Text="{Binding PatientFirstName}"/>
            <TextBlock Text="{Binding PatientLastName}"/>
            <TextBlock Text="{Binding Pesel}"/>
            <TextBlock Text="{Binding DateOfBirth}"/>
            <TextBlock Text="{Binding PatientContactNumber}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
